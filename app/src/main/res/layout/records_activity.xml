<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_200">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="95dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"

        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/top_BTN_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#539756"
            app:icon="@drawable/ic_left"
            app:iconGravity="textTop"
            app:iconSize="30dp"
            app:iconTint="@color/black"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"

            />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTintMode="add"
        android:gravity="center"
        android:orientation="vertical">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/top_LBL_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:fontFamily="@font/iron_wall"
            android:text="TOP 10"
            android:textColor="#000000"
            android:textSize="35sp" />

        <FrameLayout
            android:id="@+id/top_LAY_details"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="24dp"
            android:layout_weight="1"
            android:background="#45454545" />

        <FrameLayout
            android:id="@+id/top_LAY_maps"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="24dp"
            android:layout_weight="1"
            android:background="#45454545" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>